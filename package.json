{
  "name": "api",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/express-validator": "3.0.0",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "8.0.29",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.2.0",
    "git-commit-msg-linter": "4.1.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "tsc-alias": "1.6.6",
    "tsconfig-paths": "3.14.1",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "express": "4.17.3",
    "express-validator": "6.14.0",
    "jsonwebtoken": "8.5.1",
    "pg": "8.4.0",
    "reflect-metadata": "0.1.10",
    "typeorm": "0.2.41",
    "uuid": "8.3.2"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register app",
    "start": "ts-node -r tsconfig-paths/register app",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "migrate": "npm run typeorm migration:run",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix --max-warnings=0",
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "test:ci": "jest --passWithNoTests --runInBand --coverage",
    "test:staged": "jest --passWithNoTests",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix",
      "yarn test --bail --findRelatedTests"
    ]
  }
}
